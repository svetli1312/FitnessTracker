<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- Header -->
        <TextView

            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Today's Macros"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Macros Summary -->
        <TextView
            android:id="@+id/calorieTargetView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories: 0"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/proteinTargetView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Protein: 0g"
            android:textSize="18sp" />
        <Button
            android:id="@+id/viewCalendarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Calendar"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:id="@+id/carbsTargetView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carbs: 0g"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/fatTargetView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fat: 0g"
            android:textSize="18sp" />

        <!-- Buttons -->
        <Button
            android:id="@+id/addMealButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Add Meal" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mealRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            tools:ignore="MissingClass" />


    </LinearLayout>
</ScrollView>
